<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
    <h1><%= title %></h1>

    <ul>
      <% message.forEach(function(message) { %>
        <li>
          <strong><%= message.user %></strong> said: 
          "<%= message.text %>" on <%= message.added.toDateString() %>
        </li>
      <% }); %>
    </ul>

    <a href="/new">Add a new message</a>
</body>
</html>
